{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [ "node" ,"gapi", "gapi.auth2" ,"gapi.client", "gapi.client.drive"],
"typeRoots": [ "../node_modules/@types" ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "test.ts",
    "src/**/*.spec.ts"
  ]
}
